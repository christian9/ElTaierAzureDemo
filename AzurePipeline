# Android
# Build your Android project with Gradle.
# Add steps that test, sign, and distribute the APK, save build artifacts, and more:
# https://docs.microsoft.com/azure/devops/pipelines/languages/android

trigger:
- master

pool:
  vmImage: 'macos-latest'

steps:
- task: Gradle@2
  inputs:
    workingDirectory: ''
    gradleWrapperFile: 'gradlew'
    gradleOptions: '-Xmx3072m'
    publishJUnitResults: false
    testResultsFiles: '**/TEST-*.xml'
    tasks: 'assembleDebug'
- task: CopyFiles@2
  inputs:
    contents: '**/*.apk'
    targetFolder: '$(build.artifactStagingDirectory)'
- task: PublishBuildArtifacts@1
  displayName: 'Publish Artifact to Pipeline'
  inputs:
   targetPath: '$(Build.ArtifactStagingDirectory)/drop'
   artifactName: ArtifactA
- task: AzureCLI@2
  displayName: 'Upload file to Azure Blob Storage'
  inputs:
    azureSubscription: 'a2c00afd-2b96-4016-9f25-104083500e21'
    scriptType: 'bash'
    scriptLocation: 'inlineScript'
    inlineScript: |
      az storage blob upload --account-name releasesst --account-key sp=racwdl&st=2023-03-07T06:32:08Z&se=2023-03-07T14:32:08Z&sv=2021-06-08&sr=c&sig=h9q16zKwecWAq2jM%2Bx541znosvDhYNolW7ORUagEdFg%3D --container-name todoreleases --type block --name app-debug.apk --source '$(Build.ArtifactStagingDirectory)/drop'

